@import './variables'

.sk-cube-grid
    width 40px
    height 40px
    margin auto
    absolute 0 0 0 0
    
    .sk-cube5
        animation-delay .2s
        
    .sk-cube4
        animation-delay .1s
        
    .sk-cube7
        animation-delay .0s
        
    .sk-cube6
        animation-delay .3s
        
    .sk-cube1
        animation-delay .2s
        
    .sk-cube
        width 33.33%
        height 33.33%
        background-color _c1
        float left
        animation sk-cubeGridScaleDelay 1.3s infinite ease-in-out
        
    .sk-cube3
        animation-delay .4s
        
    .sk-cube2
        animation-delay .3s
        
    .sk-cube9
        animation-delay .2s
        
    .sk-cube8
        animation-delay .1s

@keyframes sk-cubeGridScaleDelay
    0%, 70%, 100%
        transform scale3D(1, 1, 1)
        
    35%
        transform scale3D(0, 0, 1)

